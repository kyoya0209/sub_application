<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <h2 class="edit_title">Public Information <span class="detail">(※ is required.)</span></h2>
      <%= f.label :name %><span> (※)</span>
      <%= f.text_field  :name,  autofocus: true, autocomplete: "name", class: 'form-control' %>
      
      <%= f.label :username %><span> (※)</span>
      <%= f.text_field  :username,  autofocus: true, autocomplete: "username", class: 'form-control' %>
      
      <%= f.label :website %>
      <%= f.text_field  :website,  autofocus: true, autocomplete: "website", class: 'form-control' %>
      
      <%= f.label :profile %>
      <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: 'form-control' %>
        
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      <% end %>
      
      <h2 class="edit_title edit_title_private">Private Information <span class="detail">( leave blank if you don't want to change it )</span></h2>  
      
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      
      <%= f.label :phone %>
      <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: 'form-control' %>
      
      <%= f.label :gender %>
      <%= f.select :gender, {'male': 1, 'female': 2, 'others': 3}, {class: 'form-control'} %>
      
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  
      <%= f.label :current_password %> (we need your current password to confirm your changes)
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  
  
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>

<h3 class="edit_title edit_title_private">Delete my account</h3>

<p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>
